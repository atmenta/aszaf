  <properties>
    <titles>
      <title>Egy test és egy Lélek</title>
    </titles>
    <verseOrder>v1</verseOrder>
    <authors>
      <author></author>
    </authors>
    <songbooks>
      <songbook name="ZöldKönyv" entry="229"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Egy test és egy Lélek,<br/>elhívásunk egy reményre szól.<br/>Egy az Úr, egy a hit,<br/>egy a keresztség, Jézusunk.<br/>Egy az Isten, mindeneknek atyja,<br/>mindenek fölött Ő áll.<br/>Mindent áthat, mindenben Ő van,<br/>testvérek egymást!</lines>
    </verse>
  </lyrics>
</song>
