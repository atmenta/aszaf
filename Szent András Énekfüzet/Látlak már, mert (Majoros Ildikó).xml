<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.0.1" modifiedIn="OpenLP 2.0.1" modifiedDate="2013-02-06T14:31:46">
  <properties>
    <titles>
      <title>Látlak már, mert</title>
    </titles>
    <authors>
      <author>Majoros Ildikó</author>
    </authors>
    <songbooks>
      <songbook name="Énekfüzet" entry="282"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Látlak már, mert<br/>szemem felnyitottad,<br/>Jézus, látlak már.<br/>Látlak már, szívem tűzben ég,<br/>Jézus, látlak már.</lines>
    </verse>
    <verse name="c1">
      <lines>Felismertelek, Rólad mondja az Írás:<br/>Te vagy a megígért Messiás.</lines>
    </verse>
  </lyrics>
</song>
