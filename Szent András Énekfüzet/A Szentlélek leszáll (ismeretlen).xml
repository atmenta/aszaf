  <properties>
    <titles>
      <title>A Szentlélek leszáll</title>
    </titles>
    <verseOrder>v1 c1</verseOrder>
    <authors>
      <author>ismeretlen</author>
    </authors>
    <songbooks>
      <songbook name="Énekfüzet" entry="95"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>A Szentlélek leszáll,<br/>és minden megváltozik, megnyílik szemed!<br/>A Szentlélek leszáll,<br/>és új emberré leszel, meglátod Őt, aki szeret!</lines>
    </verse>
    <verse name="c1">
      <lines>Meglátod Őt, Jézust, meglátod Őt, Jézust!</lines>
    </verse>
  </lyrics>
</song>
