  <properties>
    <titles>
      <title>Jöjj, hívunk, jöjj, Szentlélek</title>
    </titles>
    <verseOrder>v1 c1</verseOrder>
    <authors>
      <author>ismeretlen</author>
    </authors>
    <songbooks>
      <songbook name="Énekfüzet" entry="29"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Jöjj, hívunk, jöjj, Szentlélek, a szívünkbe áradj,<br/>jöjj, hívunk, jöjj, mint folyó, amely túlárad!</lines>
    </verse>
    <verse name="c1">
      <lines>Úgy várunk, és kiáltunk,<br/>áradj szét, áradj szét, áradj szét!</lines>
    </verse>
  </lyrics>
