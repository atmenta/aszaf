    <authors>
      <author>ismeretlen</author>
    </authors>
    <songbooks>
      <songbook name="Énekfüzet" entry="9"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Szentlélek, köszöntünk!<br/>Szentlélek, köszöntünk!<br/>Gyújtsd meg újra szent tüzed,<br/>hadd égjen bennünk az első szeretet!<br/>Friss olajjal kend meg fejünk!<br/>Szentlélek, Szentlélek,<br/>oly jó, hogy itt vagy velünk!</lines>
    </verse>
  </lyrics>
</song>
