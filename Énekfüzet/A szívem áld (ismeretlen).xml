      <title>A szívem áld</title>
    </titles>
    <verseOrder>v1 c1 v2</verseOrder>
    <authors>
      <author>ismeretlen</author>
    </authors>
    <songbooks>
      <songbook name="Énekfüzet" entry="98"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>A szívem áld, ó, szent Bárány,<br/>Te vetted át az összes bűnömet!</lines>
    </verse>
    <verse name="c1">
      <lines>Halleluja, halleluja!</lines>
    </verse>
    <verse name="v2">
      <lines>Meghajtom már a térdemet,<br/>Jézus Király, Tenéked énekelek!</lines>
    </verse>
  </lyrics>
